<p id="notice"><%= notice %></p>

<h1>Listing Designs</h1>

<table>
  <thead>
    <th>Image</th>
     <th>Name</th>
     <th>Description</th>
    <tr>
      <th>Product name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
    <%= image_tag @design.image.url(:large) %>
       <td><%= image_tag design.image.url(:thumb) %></td>
       <td><%= design.product_name %></td>
       <td><%= design.company_id %></td>
       <td><%= design.description %></td>
      <tr>
        <td><%= design.product_name %></td>
        <td><%= design.description %></td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

